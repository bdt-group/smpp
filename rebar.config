{erl_opts,
 [debug_info,
  warn_export_all,
  warn_export_vars,
  warn_unused_record,
  warn_bif_clash,
  warn_obsolete_guard,
  warn_unused_vars,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_deprecated_function]}.

{xref_checks,
 [undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions]}.

{deps, [{smpp34pdu, ".*", {git, "https://github.com/zinid/smpp34pdu.git", {branch, "master"}}},
        {ranch, ".*", {git, "https://github.com/ninenines/ranch.git", {branch, "master"}}}]}.

